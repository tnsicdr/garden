---
import "../styles/reset.css";
import "../styles/customizations.css";
import NavBar from "../components/NavBar/NavBar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <NavBar />
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  body {
    max-width: 1600px;
    margin: 0 auto;
  }
</style>
